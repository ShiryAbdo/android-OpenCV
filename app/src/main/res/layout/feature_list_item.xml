<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_large"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="Grayscale"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/text_secondary"
            android:id="@+id/feature_name"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_large"
            android:layout_alignParentEnd="true"
            android:theme="@style/switch_style"
            android:id="@+id/feature_state"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/feature_state"
            android:layout_marginLeft="@dimen/margin_card"
            android:layout_marginRight="@dimen/margin_card"
            android:background="@color/divider"/>

    </RelativeLayout>
